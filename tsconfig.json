{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": ["vite/client"],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@core/*": ["packages/effect-ui/src/core/*"],
      "@dom/*": ["packages/effect-ui/src/dom/*"],
      "effect-ui": ["packages/effect-ui/src/index.ts"],
      "@effect-ui/router": ["packages/router/src/index.ts"],
      "@effect-ui/form": ["packages/form/src/index.ts"],
      "@effect-ui/primitives": ["packages/primitives/src/index.ts"]
    }
  },
  "include": ["packages/*/src", "src"]
}
